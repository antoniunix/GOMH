<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="styleButton" tools:keep="@style/styleButton">
        <item name="android:background">@drawable/shape_button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="title_text_toolbar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_text_title_bar</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/colorTextTitleBar</item>
    </style>

    <style name="title_text_toolbar_style_dialog" parent="title_text_toolbar_style">
        <item name="android:textColor">@color/colorTextTitleDialog</item>
        <item name="android:textSize">@dimen/size_text_title_dialog</item>
    </style>

    <style name="style_dialog">
        <item name="android:minWidth">@dimen/minWidthDialog</item>
    </style>

    <style name="style_Button">
        <item name="android:background">@drawable/shape_button</item>
        <item name="android:textColor">@color/colorTextButton</item>
    </style>

    <style name="style_edittext_census" parent="android:Widget.EditText" tools:keep="@style/style_edittext_census">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" tools:keep="@style/AppTheme_AppBarOverlay" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" tools:keep="@style/AppTheme_PopupOverlay" />

    <style name="style_Txt_publicity">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorProgressProgress</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>
    <style name="style_edt_publicity">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
